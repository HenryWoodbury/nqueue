generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Draft {
  id        String   @id @default(cuid())
  draftName String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("drafts")
  @@index([userId])
}
